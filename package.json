{
  "name": "a11y-toolbox-pro",
  "version": "1.0.0",
  "description": "Outils d’accessibilité front-end (audité).",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint:prettier": "prettier --check .",
    "lint:manifests": "node scripts/validate-manifests.mjs",
    "lint:axe": "node scripts/check-axe-core.mjs",
    "lint:js": "eslint src --max-warnings=0",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm run lint:prettier && npm run lint:manifests && npm run lint:axe && npm run lint:js && npm run lint:css",
    "postinstall": "playwright install",
    "test:php": "php tests/php/run.php",
    "test:unit": "npm run test:php && vitest run",
    "test:visual": "playwright test",
    "test": "npm run lint && npm run test:unit && npm run test:visual",
    "demo:stt": "node scripts/integrations/demo-stt.js",
    "demo:vlm": "node scripts/integrations/demo-vlm.js",
    "demo:vlm:llava": "npm run demo:vlm -- --engine=llava-local",
    "sync:axe": "node scripts/sync-axe-core.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "axe-core": "^4.11.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "http-server": "^14.1.1",
    "iconv-lite": "^0.6.3",
    "jsdom": "22.1.0",
    "prettier": "^3.6.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "vitest": "^1.6.0"
  }
}
